<h1>See datails of task id = <%= @task.id %></h1>

<table class="table table-bordered">
  <tr>
    <th>内容</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>状況</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'You can edit here!', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to 'You can delete here!', @task, method: :delete, data: { confirm: 'You do really?' }, class: "btn btn-danger" %>